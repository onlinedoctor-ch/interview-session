{
	"name": "The Interview",
	"dockerComposeFile": "docker-compose.yml",
	"service": "app",
	"workspaceFolder": "/workspace",
	"customizations": {
		"vscode": {
			"settings": { 
				"files.exclude": {
					"**/.git": true,
					"**/.svn": true,
					"**/.hg": true,
					"**/CVS": true,
					"**/.DS_Store": true,
					"**/Thumbs.db": true,
					"**/*.pyc": {"when": "$(basename).py"}, 
					"**/__pycache__": true
				},
				"python.formatting.provider": "black"
			},
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance"
			]
		}
	},
	"postCreateCommand": "npm install -g npm@latest && pip install --upgrade pip && pip install -r backend/app/requirements.txt && cd frontend/app && npm ci",
	"forwardPorts": [1234, 5000, 5432],
	"remoteUser": "vscode"
}
