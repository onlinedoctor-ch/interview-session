{
	"name": "Backend - OD Example",
	"dockerComposeFile": [
		"../../docker-compose.yml",
		"docker-compose.yml"
	],
	"service": "backend",
	"workspaceFolder": "/app",
	"settings": {
		"workbench.colorCustomizations": {
			"activityBar.foreground": "#3eec1c"
		},
		"files.exclude": {
			"**/.git": true,
			"**/.svn": true,
			"**/.hg": true,
			"**/CVS": true,
			"**/.DS_Store": true,
			"**/Thumbs.db": true,
			"**/*.pyc": {"when": "$(basename).py"}, 
			"**/__pycache__": true
		},
		"python.formatting.provider": "black",
	},

	"extensions": [
		"ms-python.python",
		"ms-python.vscode-pylance",
		"cweijan.vscode-database-client2"
	],
	"forwardPorts": [
		5001
	]
}
